{
  "compilerOptions": {
    /* 設定編譯過程中要使用的 JavaScript 版本 */
    "target": "ESNext",
    /* 允許匯入 JSON 檔案 */
    "resolveJsonModule": true,
    /* 指定生成的模組代碼類型 */
    "module": "commonjs",
    /* 指定 TypeScript 如何從給定的模組找文件 */
    "moduleResolution": "Node",
    /* 指定輸出文件夾 */
    "outDir": "./dist",
    /* 發出額外的 JavaScript 以便於支援導入 CommonJS 模組。 */
    "esModuleInterop": true,
    /* 區分大小寫 */
    "forceConsistentCasingInFileNames": true,
    /* 嚴格類型檢查 */
    "strict": true,
    /* 跳過所有 .d.ts 文件的類型檢查 */
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  }
}
